<div class="container setup-register">

  <div class="vertical-center">

    <div class="columns">
      <div class="column">
        <h2>{{team.subdomain}}.deckapp.io</h2>
      </div>
    </div>

    <div class="columns">
      <div class="column">
        <label>Signup</label>
        <div>{{input type="text" value=user.name placeholder="Full name"}}</div>
        <div>{{input type="text" value=user.username placeholder="Username"}}</div>
        <div>{{input type="text" value=user.email placeholder="Email address"}}</div>
        <div>{{input type="password" value=user.password placeholder="Password"}}</div>
        {{#if error}}
          <div><small>{{error}}</small></div>
        {{/if}}
        <div class="button" {{action 'register'}}>
          <span>Create Account</span>
        </div>
      </div>
    </div>

  </div>

</div>
